extends ../layout/app

block styles
    link(rel="stylesheet" href="https://unpkg.com/leaflet@1.8.0/dist/leaflet.css")

block contenido
    div.py-1 
        h2.text-center.text-2xl.font-extrabold= pagina      
        if errores 
            div(class="max-w-md mx-auto my-10")
                each error in errores 
                    p.bg-red-600.text-white.uppercase-text-xs.text-center.p-2.mb-1.fond-bold= error.msg

        div(class="bg-white shadow py-4 px-4 rounded mx-auto max-w-4xl my-10 ")
            div.container.mx-auto.p-4

             h2.text-center.text-2xl.font-extrabold= idTabla 
             h2.text-center.text-2xl.font-extrabold= nombreTabla
                form(action='/upload', method='post', enctype='multipart/form-data')
                    div.flex.flex-col.items-left.space-y-1
                        input(type='file', name='file' class='border rounded-lg p-2')
                        button(type='submit' class='bg-blue-500 hover:bg-blue-600 text-white font-semibold py-2 px-4 rounded-lg') Validar Archivo

            table(class="stripe hover" style="width: 100%; padding-top: 1em; padding-botton: 1em;")
                thead 
                    tr(class="bg-indigo-400 bg-opacity-100 text-white")
                        th(data-priority=1) Id
                        th(data-priority=2) NombreTabla
                        th(data-priority=3) NombreArchivo
                        th(data-priority=4) FechaRegistro
                        th(data-priority=5) Validar
                        th(data-priority=6) Editar
                        th(data-priority=7) Eliminar
                tbody 